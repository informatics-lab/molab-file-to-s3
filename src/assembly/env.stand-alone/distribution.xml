<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <files>

        <!-- executable jar -->
        <file>
            <source>${project.build.directory}/${project.artifactId}-${version}.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>${project.artifactId}.jar</destName>
        </file>

        <!-- shell script-->
        <file>
            <filtered>true</filtered>
            <source>src/conf/env.stand-alone/app.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>${project.artifactId}.sh</destName>
            <fileMode>754</fileMode>
            <lineEnding>unix</lineEnding>
        </file>

        <!-- logback core -->
        <file>
            <filtered>true</filtered>
            <source>src/conf/env.stand-alone/logback_core.xml</source>
            <outputDirectory>/</outputDirectory>
            <destName>logback_core.xml</destName>
            <fileMode>754</fileMode>
        </file>

    </files>

</assembly>